<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?android:textColor</item>
        <!-- Customize your theme here. -->
        <item name="TextColorEdittext">@color/black_gray</item>
    </style>

    <style name="OrangeTheme" parent="Theme.ExChat">
        <item name="colorPrimary">@color/pure_orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
    </style>

    <style name="BlueTheme" parent="Theme.ExChat">
        <item name="colorPrimary">@color/pure_blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
    </style>

    <style name="GreenTheme" parent="Theme.ExChat">
        <item name="colorPrimary">@color/pure_green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
    </style>

    <style name="PinkTheme" parent="Theme.ExChat">
        <item name="colorPrimary">@color/pure_pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
    </style>
</resources>